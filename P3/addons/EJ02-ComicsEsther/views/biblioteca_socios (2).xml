    <!-- Tree(list) View -->
    <record id="biblioteca_socio_view_tree" model="ir.ui.view">
        <field name="name">Lista de Socios</field>
        <field name="model">biblioteca.socios</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="nombre" />
                <field name="apellido" />
            </tree>
        </field>
    </record>

    <!-- Vista busqueda-->
    <record id="biblioteca_socio_view_search" model="ir.ui.view">
        <field name="name">BÃºsqueda de Socio por nombre</field>
        <field name="model">biblioteca.socios</field>
        <field name="arch" type="xml">
            <search>
                <field name="id" />
                <field name="nombre" />
                <field name="apellido" />
            </search>
        </field>
    </record>


    <!-- Vista Kanban -->
    <record id="biblioteca_socio_view_kanban" model="ir.ui.view">
        <field name="name">Lista de Socios</field>
        <field name="model">biblioteca.socios</field>
        <field name="arch" type="xml">
            <!-- Agrupamos por el atributo "parent_id"-->
            <kanban>
                <!-- Indicamos que atributos usaremos al hacer la vista Kanban -->

                <field name="id" />
                <field name="nombre" />
                <field name="apellido" />
                <!-- Plantilla QWeb para indicar como es la tarjeta Kanban-->
                <templates>
                    <t t-name="kanban-box">
                        <field name="id" />
                        <field name="nombre" />
                        <field name="apellido" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>